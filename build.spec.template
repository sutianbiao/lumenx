# PyInstaller Spec 文件模板
# 这是一个高级配置模板，供需要自定义打包的用户使用

import os
import sys
from PyInstaller.utils.hooks import collect_all, collect_data_files, collect_submodules

block_cipher = None

# 项目根目录
ROOT_DIR = os.path.abspath('.')

# 收集所有数据文件
datas = [
    ('static', 'static'),
    ('src/apps/comic_gen/style_presets.json', 'src/apps/comic_gen'),
]

# 如果存在 .env 文件，也打包进去
if os.path.exists('.env'):
    datas.append(('.env', '.'))

# 收集所有隐藏导入
hiddenimports = [
    # Uvicorn
    'uvicorn.logging',
    'uvicorn.loops',
    'uvicorn.loops.auto',
    'uvicorn.protocols',
    'uvicorn.protocols.http',
    'uvicorn.protocols.http.auto',
    'uvicorn.protocols.websockets',
    'uvicorn.protocols.websockets.auto',
    'uvicorn.lifespan',
    'uvicorn.lifespan.on',
    # PyQt5
    'PyQt5',
    'PyQt5.QtCore',
    'PyQt5.QtGui',
    'PyQt5.QtWidgets',
    'PyQt5.QtWebEngineWidgets',
    'PyQt5.QtWebEngineCore',
    # Web Framework
    'starlette',
    'starlette.staticfiles',
    'fastapi',
    'pydantic',
    # 阿里云 SDK
    'dashscope',
    'oss2',
    'alibabacloud_videoenhan20200320',
    'alibabacloud_tea_openapi',
    'alibabacloud_tea_util',
    # 其他
    'yaml',
    'dotenv',
    'httptools',
    'uvloop',
    'requests',
    'multipart',
]

# 自动收集包的所有内容
for package in ['uvicorn', 'fastapi', 'starlette', 'pydantic', 'PyQt5']:
    tmp_datas, tmp_binaries, tmp_hiddenimports = collect_all(package)
    datas += tmp_datas
    hiddenimports += tmp_hiddenimports

a = Analysis(
    ['main.py'],
    pathex=[ROOT_DIR],
    binaries=[],
    datas=datas,
    hiddenimports=hiddenimports,
    hookspath=['.pyinstaller-hooks'],
    hooksconfig={},
    runtime_hooks=[],
    excludes=[
        # 排除不需要的模块以减小体积
        'matplotlib',
        'numpy',
        'PIL',
        'tkinter',
    ],
    win_no_prefer_redirects=False,
    win_private_assemblies=False,
    cipher=block_cipher,
    noarchive=False,
)

pyz = PYZ(a.pure, a.zipped_data, cipher=block_cipher)

exe = EXE(
    pyz,
    a.scripts,
    a.binaries,
    a.zipfiles,
    a.datas,
    [],
    name='云创AI漫剧',
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,  # 使用 UPX 压缩（需要安装 UPX）
    upx_exclude=[],
    runtime_tmpdir=None,
    console=False,  # 不显示控制台窗口
    disable_windowed_traceback=False,
    argv_emulation=False,
    target_arch=None,
    codesign_identity=None,
    entitlements_file=None,
    # macOS 使用 .icns，Windows 使用 .ico
    icon='icon.icns' if sys.platform == 'darwin' else 'icon.ico',
)

# macOS 应用包配置
if sys.platform == 'darwin':
    app = BUNDLE(
        exe,
        name='云创AI漫剧.app',
        icon='icon.icns',
        bundle_identifier='com.tron.comic',
        info_plist={
            'NSPrincipalClass': 'NSApplication',
            'NSHighResolutionCapable': 'True',
            'CFBundleShortVersionString': '1.0.0',
            'CFBundleVersion': '1.0.0',
        },
    )
